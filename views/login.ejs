    <script>
        const apiUrl = "<%= apiUrl %>";
        function loginUser() {
            // Get form values

            var email = document.getElementById("email").value;
            var password = document.getElementById("password").value;

            // Construct JSON payload
            var myHeaders = new Headers();
            myHeaders.append("Content-Type", "application/json");

            var raw = JSON.stringify({
                "email": email,

                "password": password,
            });

            var requestOptions = {
                method: 'POST',
                headers: myHeaders,
                body: raw,
                redirect: 'follow'
            };

            // Prevent default form submission
            event.preventDefault();

            // Make API call
            fetch(`${apiUrl}/api/login`, requestOptions)
                .then(response => response.json()) // Assuming the response is JSON
                .then(result => {
                    console.log(result);

                    // Handle success
                    if (result.message === "Successfully Login!") {
                        showSuccessAlert(result.message);
                        const token = result.data.token;

                        // Store token in cookies
                        document.cookie = `token=${token}; expires=${new Date(Date.now() + 7 * 24 * 60 * 60 * 1000).toUTCString()}; path=/`;

                        // Store token in localStorage
                        localStorage.setItem('token', token);
                        window.location.reload()
                        window.location.href = "/";
                        // Continue with any other success handling, e.g., show a success message or redirect to another page
                    } else {
                        // Handle the case where the login was not successful
                        showErrorAlert(result.message);
                        console.error("Login failed:", result.message);
                    }
                })
                .catch(error => {
                    showErrorAlert(error);
                    console.log('error', error);
                    // Handle error, e.g., show an error message
                });

        }

        document.addEventListener("DOMContentLoaded", function () {
            // Attach the registerUser function to the form's submit event
            document.getElementById("loginForm").addEventListener("submit", loginUser);
        });


        function showSuccessAlert(message) {
            // Display the success alert with the API message
            const successAlert = document.getElementById('successAlert');
            if (successAlert) {
                successAlert.innerHTML = `
            <strong>Success!</strong> ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        `;
                successAlert.style.display = 'block';
            }
        }

        function showErrorAlert(message) {
            // Display the error alert with the API message
            const errorAlert = document.getElementById('errorAlert');
            if (errorAlert) {
                errorAlert.innerHTML = `
            <strong>Error!</strong> ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        `;
                errorAlert.style.display = 'block';
            }
        }
    </script>
